<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/filmresmi"
        android:layout_width="136dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/filmadı"
        android:layout_width="121dp"
        android:layout_height="58dp"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textColor="@color/design_default_color_background"

        app:layout_constraintBottom_toBottomOf="@+id/filmresmi"
        app:layout_constraintStart_toEndOf="@+id/filmresmi"
        app:layout_constraintTop_toTopOf="@+id/filmresmi"
        app:layout_constraintVertical_bias="0.314" />

    <TextView
        android:id="@+id/filmyılı"
        android:layout_width="98dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textColor="@color/design_default_color_background"

        app:layout_constraintBottom_toBottomOf="@+id/filmadı"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/filmadı"
        app:layout_constraintTop_toTopOf="@+id/filmadı"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="41dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/filmresmi"
        app:layout_constraintTop_toBottomOf="@+id/filmadı"
        app:srcCompat="@drawable/eng" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="67dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/filmadı"
        app:srcCompat="@drawable/turk" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="23dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="52dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:text="9.2/10"
        android:textStyle="bold|italic"

        android:textColor="@color/design_default_color_background"

        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/filmyılı" />

</androidx.constraintlayout.widget.ConstraintLayout>